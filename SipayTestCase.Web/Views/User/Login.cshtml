@model SipayTestCase.Web.Models.LoginViewModel

@{
    ViewBag.Title = "Kullanıcı Girişi";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Login</div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label for="Email">Email:</label>
                            <input type="text" id="Email" name="Username" class="form-control" value="@Model.Email"/>
                        </div>
                        <div class="form-group">
                            <label for="Password">Şifre:</label>
                            <input type="password" id="Password" name="Password" class="form-control" value="@Model.Password"/>
                        </div>
                        <button type="submit" class="btn btn-primary">Giriş Yap</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>